<Alert>:
    canvas.before:
        Color:
            rgba: (240/255,201/255,1/255,1)
        Triangle:
            points: [int(2 * root.width), root.height, 0, int(0.9*root.height), 0, root.height]
    Image:
        source: "image/pszola.png"
        pos: root.width - self.width, root.height - self.height
        size: root.width, root.height - 10
    BoxLayout:

        id: layout
        
        orientation: "vertical"
        pos: (root.width -self.width)/2, root.height - 1.5*self.height 
        size: 400, 400
        size_hint: None, None

        padding: 60
        spacing: 10
        Label:
            text: "Tu bylyby alerty"
            canvas.before:
                Color: 
                    rgba: (20/255,20/255,20/255,0.5)
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            text: "I sÄ…"
            background_color: (60/255,60/255,60/255,0.5)
            on_press: root.idle()
    Menu:
